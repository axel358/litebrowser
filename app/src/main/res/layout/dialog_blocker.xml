<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="10dp"
	android:paddingEnd="10dp">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_marginTop="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Blocking profile"
			android:layout_weight="1.0"
			android:textSize="17sp"/>

		<Spinner
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/block_profiles_switch"/>

	</LinearLayout>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Block Javascript"
		android:id="@+id/block_js_chkbx"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Block images"
		android:id="@+id/block_img_chkbx"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Block CSS"
		android:id="@+id/block_css_chkbx"/>

	<CheckBox
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Block external resources"
		android:id="@+id/block_external_chkbx"/>

</LinearLayout>

