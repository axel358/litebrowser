    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="android:windowBackground">@drawable/dialog</item>
        <item name="android:colorAccent">#FF0066F4</item>
    </style>
</resources>
